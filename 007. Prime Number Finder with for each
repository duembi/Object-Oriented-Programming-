import java.util.Scanner;
public class Prime_Number_Finder {
    public static void main(String[] args){
        Scanner scan = new Scanner(System.in);

        int i, x, nonprm = 0;
        int prm = 0, counter2 = 0, counter3 = 0;
        
        System.out.print("Enter how many numbers you will enter : ");
        x = scan.nextInt();

        int[] arr1 = new int[x];
        int[] arr2 = new int[x];
        int[] arr3 = new int[x];
        
        for(i = 0; i < x; i++){

            System.out.print("Please enter " +(i+1)+ ". value : ");
            arr1[i] = scan.nextInt();

        }

         for(int j : arr1){

            if(j == 1){

                nonprm = nonprm + 1;
                arr3[counter3] = j;
                counter3 = counter3 + 1;
            }
            else if(j == 2){

                prm = prm + 1;
                arr2[counter2] = j;
                counter2 = counter2 + 1;

            }
            else {

                for(i = 2; i < j; i++){
            
                    if(j % i == 0){

                        nonprm = nonprm + 1;
                        arr3[counter3] = j;
                        counter3 = counter3 + 1;
                        break;
                    }
                    else{

                        prm = prm + 1;
                        arr2[counter2] = j;
                        counter2 = counter2 + 1;
                        break;
                    }
                    
                }
            }
        }
        
       /*  for(i = 0; i < x; i++){

            if(arr1[i] != arr3[i]){

                    prm = prm + 1;
                    arr2[counter2] = arr1[i];
                    counter2 = counter2 + 1;
       
            }
            


        }*/

        System.out.print("In thÄ±s array has " +prm+ " prime number : " );
        for(int j : arr2){

            if(j == 0){

                continue;
            }

            System.out.print(j +" ");

        } 

        System.out.print("\nIn this array has " +nonprm+ " nonprime number : ");
         for(int j : arr3){

            if(j == 0){

                continue;
            }
            System.out.print(j +" ");

        } 





    }

}
